<%- include('../includes/head.ejs') %>
    </head>

    <body>
        <%- include('../includes/navigation.ejs') %>

        <main>
            <% if(products.length > 0) { %> 
                <ul>
                    <% products.forEach(data => { %> 
                        <li>
                            <p><%= data.productData.title %>(<%= data.qty %>)</p>
                            <form action="/cart-delete-item" method="POST">
                                <input type="hidden" name="productId" value="<%= data.productData.id %>">
                                <button class="btn">Delete item from cart</button>
                            </form>
                        </li>
                    <% }); %> 
                </ul>
            <% } else { %> 
                <h1>Cart is Empty :-0</h1>
            <% } %> 
        </main>
        
<%- include('../includes/end.ejs') %>