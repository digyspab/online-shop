<%- include('../includes/head.ejs') %>
<link rel="stylesheet" href="/css/forms.css">
<link rel="stylesheet" href="/css/product.css">
</head>

<body>
    <%- include('../includes/navigation.ejs') %>

    <main>
        <form class="product-form" action="/admin/add-product" method="POST" onkeyup="checkValidation()">

            <!-- Title -->
            <div class="form-control">
                <label for="title">Title</label>
                <input type="text" name="title" id="title">
            </div>

            <!-- Image url -->
            <div class="form-control">
                <label for="imageUrl">Image URL</label>
                <input type="text" name="imageUrl" id="imageUrl">
            </div>

            <!-- Price -->
            <div class="form-control">
                <label for="price">Price</label>
                <input type="text" name="price" id="price" step="0.01">
            </div>

            <!-- Product Description -->
            <div class="form-control">
                <label for="description">Description</label>
                <textarea name="description" id="description" rows="5"></textarea>
            </div>

            <button class="btn" type="submit">Add Product</button>
        </form>
    </main>

    <script>
        let price = document.getElementById("price").vlaue;
        function checkValidation(e) {
            if(isNaN(price) && price.length > 6) {
                document.getElementById("price").vlaue = ""
            }
        }
    </script>
    
    <%- include('../includes/end.ejs') %>