<%- include('../includes/head.ejs') %>
<link rel="stylesheet" href="/css/forms.css">
<link rel="stylesheet" href="/css/product.css">
</head>

<body>
    <%- include('../includes/navigation.ejs') %>

    <main>
        <form class="product-form" action="/admin/<% if(editing) { %>edit-product <% } else { %>add-product <% } %>" method="POST" onkeyup="return checkValidation();">

            <!-- Title -->
            <div class="form-control">
                <label for="title">Title</label>
                <input type="text" name="title" id="title" value="<% if(editing) { %><%= product.title %><% } %>">
            </div>

            <!-- Image url -->
            <div class="form-control">
                <label for="imageUrl">Image URL</label>
                <input type="text" name="imageUrl" id="imageUrl" value="<% if(editing) { %><%= product.imageUrl %><% } %>">
            </div>

            <!-- Price -->
            <div class="form-control">
                <label for="price">Price</label>
                <input type="text" name="price" id="price" value="<% if(editing) { %><%= product.price %><% } %>">
            </div>

            <!-- Product Description -->
            <div class="form-control">
                <label for="description">Description</label>
                <textarea name="description" id="description" rows="5"><% if(editing) { %><%= product.description %><% } %></textarea>
            </div>

            <!-- get id if in edit mode -->
            <% if(editing) {%> 
                <input type="hidden" name="productId" value="<%= product.id %>">
            <% } %>

            <button class="btn" type="submit"><% if(editing) { %> Update Product <% } else { %> Add Product <% } %></button>
        </form>
    </main>

    <script>
        function checkValidation(e) {
        let price = document.getElementById("price").value;
            if(isNaN(price) || price.length > 6) {
                document.getElementById("price").value = ""
            }
        }
    </script>
    
    <%- include('../includes/end.ejs') %>